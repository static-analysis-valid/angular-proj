 {
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"plugins": [
		"@typescript-eslint"
	],
	"parser": "@typescript-eslint/parser",
	
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module" // Allows for the use of imports
	},
	"rules": {

		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"indent": "off",
		"@typescript-eslint/indent": "off"
	}
}
